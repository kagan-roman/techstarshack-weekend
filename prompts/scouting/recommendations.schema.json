{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Weekend Recommendations",
  "description": "Array of event or location recommendations",
  "type": "array",
  "items": {
    "oneOf": [
      { "$ref": "#/definitions/EventExperience" },
      { "$ref": "#/definitions/LocationExperience" }
    ]
  },
  "definitions": {
    "Source": {
      "type": "object",
      "required": ["label", "url"],
      "properties": {
        "label": {
          "type": "string",
          "description": "Human-readable source name"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Source URL"
        }
      }
    },
    "BaseExperience": {
      "type": "object",
      "required": ["id", "type", "title", "description", "interestId", "venue", "matchReason", "sources", "touristTrap"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "URL-safe unique identifier"
        },
        "type": {
          "type": "string",
          "enum": ["event", "location"]
        },
        "title": {
          "type": "string",
          "description": "Specific name of event or location"
        },
        "description": {
          "type": "string",
          "description": "What this is and why it's special"
        },
        "interestId": {
          "type": "string",
          "description": "ID of the matching user interest"
        },
        "venue": {
          "type": "string",
          "description": "Name of the venue/place"
        },
        "address": {
          "type": "string",
          "description": "Full physical address"
        },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          },
          "required": ["lat", "lng"]
        },
        "matchReason": {
          "type": "string",
          "description": "Why this fits the user's specific interests"
        },
        "vibe": {
          "type": "string",
          "description": "Comma-separated vibe keywords"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "priceHint": {
          "type": "string",
          "enum": ["free", "low", "mid", "high", "luxury"]
        },
        "priceDetails": {
          "type": "string",
          "description": "Specific pricing info"
        },
        "sources": {
          "type": "array",
          "items": { "$ref": "#/definitions/Source" },
          "minItems": 1
        },
        "bookingInfo": {
          "type": "string"
        },
        "bookingUrl": {
          "type": "string",
          "format": "uri"
        },
        "touristTrap": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Tourist trap score 0-100. 0 = hidden gem (local groups, reddit, telegram). 100 = tourist trap (TripAdvisor top, government tourism sites). Based on WHERE the info was found: 0-20 local telegram/discord/niche forums, 20-40 reddit/local blogs/community FB, 40-60 local event sites/regional media, 60-80 national tourism/major review platforms, 80-100 top TripAdvisor/government tourism boards."
        }
      }
    },
    "EventExperience": {
      "allOf": [
        { "$ref": "#/definitions/BaseExperience" },
        {
          "type": "object",
          "required": ["startDateTime"],
          "properties": {
            "type": {
              "const": "event"
            },
            "startDateTime": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 datetime when the event starts. REQUIRED."
            },
            "endDateTime": {
              "type": "string",
              "format": "date-time",
              "description": "ISO 8601 datetime when the event ends"
            },
            "recurrence": {
              "type": "string",
              "description": "If recurring, describe the pattern"
            },
            "eventCategory": {
              "type": "string",
              "enum": ["concert", "festival", "exhibition", "workshop", "tour", "party", "performance", "sports", "other"]
            },
            "performers": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Artists, DJs, speakers, etc."
            },
            "organizer": {
              "type": "string"
            }
          }
        }
      ]
    },
    "LocationExperience": {
      "allOf": [
        { "$ref": "#/definitions/BaseExperience" },
        {
          "type": "object",
          "required": ["operatingHours", "uniquenessReason"],
          "properties": {
            "type": {
              "const": "location"
            },
            "operatingHours": {
              "type": "object",
              "required": ["summary"],
              "properties": {
                "summary": {
                  "type": "string",
                  "description": "Human-readable hours, e.g. 'Tue-Sun 10:00-18:00, Mon closed'"
                },
                "details": {
                  "type": "object",
                  "additionalProperties": { "type": "string" },
                  "description": "Day-by-day breakdown"
                }
              }
            },
            "uniquenessReason": {
              "type": "string",
              "description": "REQUIRED. Why this place can ONLY be experienced here."
            },
            "locationCategory": {
              "type": "string",
              "enum": ["museum", "restaurant", "bar", "cafe", "landmark", "nature", "market", "neighborhood", "viewpoint", "other"]
            },
            "seasonalNotes": {
              "type": "string"
            },
            "bestTimeToVisit": {
              "type": "string",
              "description": "Recommendation for optimal visit time (not specific date)"
            }
          }
        }
      ]
    }
  }
}

